<%= form_tag(chart_path, class: "form-horizontal", method: "post") do %>
  <h1>Input initial values</h1>
  <div class="form-group">
    <%= number_field :chart, :a, class: "form-control", placeholder: "Input a here" %>
  </div>
  <div class="form-group">
    <%= number_field :chart, :m, class: "form-control", placeholder: "Input m here" %>
  </div>
  <div class="form-group">
    <%= number_field :chart, :r0, class: "form-control", placeholder: "Input r0 here" %>
  </div>
  <%= submit_tag "Submit", class: "btn btn-default" %>
<% end %>
